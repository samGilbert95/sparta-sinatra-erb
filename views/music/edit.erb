<h1>EDIT PAGE</h1>
<form action="/music/<%= @music[:id] %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Track Name</label>
    <input type="text" class="form-control" placeholder="Track" name="track"
    value = "<%= @music[:track] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Artist</label>
    <input type="text" class="form-control" placeholder="Artist" name="artist"
    value = "<%= @music[:artist] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Game</label>
    <input type="text" class="form-control" placeholder="Name" name="game"
    value = "<%= @music[:game] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Release</label>
    <input type="text" class="form-control" placeholder="Release Year" name="release"
    value = "<%= @music[:release] %>">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  <% if (@music[:id] != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
